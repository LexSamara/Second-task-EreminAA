mixin input(options)
  if !options
    - optons = {}

  .input
    label.label-cta.input__label-cta(
      for = options.id
    )
      if options.label
        = options.label
      -
        var classes = ''
        classes += options.name === 'masked-text' ? 'text-field_text-style_uppercase' : ''
        var fieldWidth = 'width: ' + options.width + 'px'

    input.text-field(
      style= fieldWidth
      class= classes
      id = options.id
      type = options.type
      name = options.name
      placeholder = options.placeholder
    )







