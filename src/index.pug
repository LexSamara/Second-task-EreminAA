//- doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    title Мой учебный проект №2
  body
    h1.visually-hidden Components

    section.components
      h2(
        class='sub-title auxiliary'
      ) Cards

      .components-wrapper-1
        include components/cards/search-form/search-form.pug
        include components/cards/registration-form/registration-form.pug
      .components-wrapper-2
        include components/cards/check-in-form/check-in-form.pug
        include components/cards/enter-form/enter-form.pug
      .components-wrapper-3
        include components/cards/calendar/calendar.pug

    section.form-elements
      h2(
        class='sub-title auxiliary'
      ) Form-elements

      .elements-wrapper-1
        include pug/mixins.pug
        include components/form-elements/input-email/input-email.pug
        include components/form-elements/input-text-field/input-text-field.pug
        include components/form-elements/input-masked-text-field/input-masked-text-field.pug
        //- include blocks/input/input.pug

        include blocks/dropdown/dropdown-mixin.pug
        //- //- include blocks/input/input.pug



    script(src='./main.js')
