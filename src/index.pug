//- doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    title Мой учебный проект №2
  body
    h1.visually-hidden Components

    section.components
      h2(
        class='sub-title auxiliary'
      ) Cards

      .components-wrapper-1
        include components/cards/search-form/search-form.pug
        include components/cards/registration-form/registration-form.pug
      .components-wrapper-2
        include components/cards/check-in-form/check-in-form.pug
        include components/cards/enter-form/enter-form.pug
      .components-wrapper-3
        include components/cards/calendar/calendar.pug

    section.form-elements
      h2(
        class='sub-title auxiliary'
      ) Form-elements

      .elements-wrapper-1
        include blocks/input/input
        include blocks/dropdown/dropdown
        include blocks/subscription/subscription
        +input({
          type: 'email',
          name: 'email',
          placeholder: 'Email',
          label: 'text field',
          width: '320'
        })
        +input({
          type: 'text',
          name: 'text',
          placeholder: 'This is pretty awesome',
          label: 'text field',
          width: '320'
        })
        +dropdown({
          type: 'text',
          name: 'text',
          placeholder: 'Сколько гостей',
          label: 'dropdown',
          width: '320'
        })
        +input({
          type: 'text',
          name: 'masked-text',
          placeholder: 'дд.мм.гггг',
          label: 'masked text field',
          width: '320'
        })
        .dropdown-wrapper
          +dropdown({
            type: 'text',
            name: 'date',
            label: 'date dropdown',
            placeholder: 'дд.мм.гггг',
            pattern: '[0-9]{2}.[0-9]{2}.[0-9]{4}',
            width: '150'
          })
          +dropdown({
            type: 'text',
            name: 'date',
            label: 'date dropdown',
            placeholder: '19.08.2019',
            width: '150'
          })
        +dropdown({
          type: 'text',
          name: 'text',
          label: 'filter date dropdown',
          placeholder: '19 авг - 23 авг',
          width: '266'
        })
        +subscription({
          label: 'subscription text field',
          width: '266'
        })

    script(src='./main.js')
